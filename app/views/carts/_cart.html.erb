<h2><%=t('carts.show.your_cart')%></h2>
<table>
    <%= render cart.line_items %>
    <tr class="total_line">
        <td colspan="2"><%=t('carts.show.total')%></td>
        <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
</table>
 
<%= button_to t('carts.show.empty_cart'), 
              cart, 
              :method => :delete,
              data: {:confirm => 'Are you sure?' } %>